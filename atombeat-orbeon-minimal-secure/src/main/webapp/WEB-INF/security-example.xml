<?xml version="1.0" encoding="UTF-8"?>
<beans:beans 
  xmlns:beans="http://www.springframework.org/schema/beans"
  xmlns="http://www.springframework.org/schema/security"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
              http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-2.0.4.xsd">  

  <http 
    auto-config="false" 
    realm="atombeat-orbeon-full-secure">
  
    <http-basic/>

    <!-- don't apply security to these, rely on eXist authentication -->
    <!-- N.B. In production you may want to disable or otherwise limit access to 
      these endpoints, as they are potential vulnerabilities -->
    <intercept-url pattern="/rest/**" filters="none"/>
    
    <!-- restrict access to AtomBeat workspace administrative scripts -->
    <intercept-url pattern="/workspace/admin/**" access="ROLE_ADMINISTRATOR" />
    
    <!-- force authentication for all requests to AtomBeat, but delegate
    access control decisions to AtomBeat -->
    <intercept-url pattern="/workspace/**" access="ROLE_USER" />

  </http>
  
  <authentication-provider>
    <user-service>
    
      <user name="adam" password="test" authorities="ROLE_USER, ROLE_ADMINISTRATOR" />

      <user name="edwina" password="test" authorities="ROLE_USER, ROLE_EDITOR" />

      <user name="melanie" password="test" authorities="ROLE_USER, ROLE_MEDIA_EDITOR" />
      
      <user name="austin" password="test" authorities="ROLE_USER, ROLE_AUTHOR" />
      <user name="audrey" password="test" authorities="ROLE_USER, ROLE_AUTHOR" />

      <user name="rebecca" password="test" authorities="ROLE_USER, ROLE_READER" />
      
      <user name="ursula" password="test" authorities="ROLE_USER" />
      
      <user name="daniel" password="test" authorities="ROLE_USER, ROLE_DATA_AUTHOR" />

    </user-service>
  </authentication-provider>

</beans:beans>