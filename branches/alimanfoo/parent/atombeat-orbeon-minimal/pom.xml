<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
  	<groupId>org.atombeat</groupId>
  	<artifactId>atombeat-parent</artifactId>
  	<version>0.1-RC8-SNAPSHOT</version>
  </parent>

  <artifactId>atombeat-orbeon-minimal</artifactId>
  <packaging>war</packaging>
  <name>${project.artifactId}</name>
  <description>AtomBeat with Orbeon (Minimal)</description>
  
  <dependencies>
  
    <!-- the core AtomBeat Java library -->
    <dependency>
      <groupId>org.atombeat</groupId>
      <artifactId>atombeat-xquery-functions</artifactId>
      <version>${project.version}</version>
      <type>jar</type>
      <scope>runtime</scope>
    </dependency>
    
    <!-- the eXist versioning module -->
    <dependency>
      <groupId>org.exist-db</groupId>
      <artifactId>exist-versioning-module</artifactId>
      <version>1.4.0</version>
      <type>jar</type>
      <scope>runtime</scope>
      <exclusions>
        <exclusion>
          <groupId>org.exist-db</groupId>
          <artifactId>exist</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    
    <!-- overlay Orbeon -->
    <dependency>
    	<groupId>com.orbeon</groupId>
    	<artifactId>orbeon</artifactId>
    	<version>3.8.0-CE-exist-1.4.0</version>
	  	<type>war</type>
	  	<scope>runtime</scope>
    </dependency>

    <!-- overlay a few parts of eXist -->
    <dependency>
      <groupId>org.exist-db</groupId>
      <artifactId>exist-webapp</artifactId>
      <version>1.4.0</version>
      <type>war</type>
      <scope>runtime</scope>
    </dependency>
        
    <!-- overlay an AtomBeat workspace -->
    <dependency>
      <groupId>org.atombeat</groupId>
      <artifactId>atombeat-workspace</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
      <scope>runtime</scope>
    </dependency>
    
  </dependencies>
  
  <build>
    <plugins>
    	<plugin>
    	<groupId>org.apache.maven.plugins</groupId>
    	<artifactId>maven-compiler-plugin</artifactId>
	  <configuration>
	     <source>1.6</source>
	     <target>1.6</target>
	  </configuration>
    	</plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
	       	<failOnMissingWebXml>false</failOnMissingWebXml>
	       	<warName>${project.build.finalName}</warName>
	       	<webappDirectory>${project.build.directory}/${project.artifactId}</webappDirectory>
	        <overlays>
	         <!-- overlay an AtomBeat workspace -->
	         <overlay>
	           <groupId>org.atombeat</groupId>
	           <artifactId>atombeat-workspace</artifactId>
	           <type>zip</type>
	           <targetPath>workspace</targetPath>
	         </overlay>
	         <!-- TODO overlay selected parts of Orbeon -->
	         <overlay>
	           <groupId>com.orbeon</groupId>
	           <artifactId>orbeon</artifactId>
             <includes>
               <include>xforms-jsp/guess-the-number/**</include>
               <include>WEB-INF/exist-data/**</include>
               <include>WEB-INF/lib/**</include>
               <include>WEB-INF/resources/page-flow.xml</include>
               <include>WEB-INF/resources/config/**</include>
               <include>WEB-INF/resources/apps/xforms-hello/**</include>
             </includes>
	         </overlay>
            <!-- overlay selected parts of eXist -->
            <overlay>
              <groupId>org.exist-db</groupId>
              <artifactId>exist-webapp</artifactId>
              <includes>
                 <include>admin/**</include>
              </includes>
            </overlay>
	        </overlays>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
