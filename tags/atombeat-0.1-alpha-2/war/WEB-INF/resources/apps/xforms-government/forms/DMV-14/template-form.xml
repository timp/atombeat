<form xmlns="http://orbeon.org/oxf/examples/dmv">
    <personal-information>
        <name>
            <first-name/>
            <initial/>
            <last-name/>
        </name>
        <driver-license-number/>
        <birth-date/>
    </personal-information>
    <address-information>
        <voter-address-change>
            <change-address/>
        </voter-address-change>
        <address type="residence">
            <street>
                <number/>
                <name-1/>
                <name-2/>
            </street>
            <apt/>
            <city/>
            <state/>
            <zip/>
        </address>
        <address type="old">
            <street>
                <number/>
                <name-1/>
                <name-2/>
            </street>
            <apt/>
            <city/>
            <state/>
            <zip/>
        </address>
    </address-information>
    <vehicle-information>
        <vehicles>
            <vehicle>
                <plate-number/>
                <vin/>
                <leased/>
            </vehicle>
        </vehicles>
        <leased-vehicles>
            <company-name/>
        </leased-vehicles>
    </vehicle-information>
</form>
