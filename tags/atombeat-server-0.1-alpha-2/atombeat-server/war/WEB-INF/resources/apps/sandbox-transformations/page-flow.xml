<config xmlns="http://www.orbeon.com/oxf/controller"
        xmlns:oxf="http://www.orbeon.com/oxf/processors">

    <page path-info="/sandbox-transformations/([^/]+)/" matcher="oxf:perl5-matcher"
          default-submission="parameters.xml" view="view.xhtml">
        <setvalue ref="/*/name" matcher-group="1"/>
    </page>

    <page path-info="/sandbox-transformations/([^/]+)/run" matcher="oxf:perl5-matcher" view="${1}/run.xpl"/>
    <page path-info="/sandbox-transformations/([^/]+)/input" matcher="oxf:perl5-matcher" view="${1}/input.xml"/>
    <page path-info="/sandbox-transformations/([^/]+)/transformation" matcher="oxf:perl5-matcher" view="${1}/transformation.xml"/>

    <epilogue url="oxf:/config/epilogue.xpl"/>

</config>
