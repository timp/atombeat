<element name="exec" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
    xmlns="http://relaxng.org/ns/structure/1.0">
    <attribute name="executable"/>
    <optional>
        <attribute name="dir"/>
    </optional>
    <optional>
        <attribute name="spawn">
            <data type="boolean"/>
        </attribute>
    </optional>
    <optional>
        <attribute name="output"/>
    </optional>
    <optional>
        <attribute name="error"/>
    </optional>
    <optional>
        <attribute name="append">
            <data type="boolean"/>
        </attribute>
    </optional>
    <optional>
        <attribute name="timeout">
            <data type="nonNegativeInteger"/>
        </attribute>
    </optional>
    <optional>
        <attribute name="newenvironment">
            <data type="boolean"/>
        </attribute>
    </optional>
    <optional>
        <attribute name="vmlauncher">
            <data type="boolean"/>
        </attribute>
    </optional>
    <optional>
        <attribute name="resolveexecutable">
            <data type="boolean"/>
        </attribute>
    </optional>
    <optional>
        <attribute name="searchpath">
            <data type="boolean"/>
        </attribute>
    </optional>
    <optional>
        <element name="arg">
            <attribute name="line"/>
        </element>
    </optional>
</element>
