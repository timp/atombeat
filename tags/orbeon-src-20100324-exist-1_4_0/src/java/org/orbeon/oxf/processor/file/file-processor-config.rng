<element name="config" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
    xmlns="http://relaxng.org/ns/structure/1.0">
    <zeroOrMore>
        <choice>

            <element name="delete">
                <interleave>
                    <element name="file">
                        <data type="string"/>
                    </element>
                    <optional>
                        <element name="directory">
                            <data type="string"/>
                        </element>
                    </optional>
                </interleave>
            </element>
            <element name="scp">
                <optional>
                    <attribute name="file"/>
                </optional>
                <optional>
                    <attribute name="localFile"/>
                </optional>
                <optional>
                    <attribute name="remoteFile"/>
                </optional>
                <optional>
                    <attribute name="todir"/>
                </optional>
                <optional>
                    <attribute name="localTodir"/>
                </optional>
                <optional>
                    <attribute name="localTofile"/>
                </optional>
                <optional>
                    <attribute name="remoteTodir"/>
                </optional>
                <optional>
                    <attribute name="remoteTofile"/>
                </optional>
                <optional>
                    <attribute name="port">
                        <data type="positiveInteger"/>
                    </attribute>
                </optional>
                <optional>
                    <attribute name="trust">
                        <data type="boolean"/>
                    </attribute>
                </optional>
                <optional>
                    <attribute name="knownhosts"/>
                </optional>
                <optional>
                    <attribute name="failonerror">
                        <data type="boolean"/>
                    </attribute>
                </optional>
                <optional>
                    <attribute name="password"/>
                </optional>
                <optional>
                    <attribute name="keyfile"/>
                </optional>
                <optional>
                    <attribute name="passphrase"/>
                </optional>
                <optional>
                    <attribute name="verbose">
                        <data type="boolean"/>
                    </attribute>
                </optional>
                <!-- Since ant 1.7 -->
                <optional>
                    <attribute name="sftp">
                        <data type="boolean"/>
                    </attribute>
                </optional>
                <!-- TODO: allow for nested fileset -->
            </element>
            <!-- In the future, we can support other operations -->
        </choice>
    </zeroOrMore>
</element>
