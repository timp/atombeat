<grammar xmlns="http://relaxng.org/ns/structure/1.0"
    datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">

    <start>
        <element name="config">
            <element name="template">
                <optional>
                    <attribute name="show-grid">
                        <choice>
                            <value>true</value>
                            <value>false</value>
                        </choice>
                    </attribute>
                </optional>
                <attribute name="href">
                    <data type="anyURI"/>
                </attribute>
            </element>
            <ref name="components"/>
        </element>
    </start>

    <define name="field">
        <element name="field">
            <optional>
                <attribute name="page">
                    <choice>
                        <data type="positiveInteger"/>
                        <ref name="avt"/>
                    </choice>
                </attribute>
            </optional>
            <choice>
            	<attribute>
            		<name>acro-field-name</name>
            		<data type="string"/>
            	</attribute>
            	<group>
		            <attribute>
		                <choice>
		                    <name>left</name>
		                    <name>left-position</name><!-- deprecated -->
		                </choice>
		                <choice>
		                    <data type="decimal"/>
		                    <ref name="avt"/>
		                </choice>
		            </attribute>
		            <attribute>
		                <choice>
		                    <name>top</name>
		                    <name>top-position</name><!-- deprecated -->
		                </choice>
		                <choice>
		                    <data type="decimal"/>
		                    <ref name="avt"/>
		                </choice>
		            </attribute>
		            <ref name="font-attributes"/>
		            <optional>
		                <attribute name="size">
		                    <choice>
		                        <data type="positiveInteger"/>
		                        <ref name="avt"/>
		                    </choice>
		                </attribute>
		            </optional>
				</group>
			</choice>
            <choice>
                <attribute name="value">
                    <data type="string"/>
                </attribute>
                <attribute name="ref">
                    <data type="string"/>
                </attribute>
            </choice>
        </element>
    </define>

    <define name="barcode">
        <element name="barcode">
            <optional>
                <attribute name="page">
                    <choice>
                        <data type="positiveInteger"/>
                        <ref name="avt"/>
                    </choice>
                </attribute>
            </optional>
            <attribute name="left">
                <choice>
                    <data type="decimal"/>
                    <ref name="avt"/>
                </choice>
            </attribute>
            <attribute name="top">
                <choice>
                    <data type="decimal"/>
                    <ref name="avt"/>
                </choice>
            </attribute>
            <ref name="font-attributes"/>
            <optional>
                <attribute name="height">
                    <choice>
                        <data type="decimal"/>
                    </choice>
                </attribute>
            </optional>
            <optional>
                <attribute name="size">
                    <choice>
                        <data type="positiveInteger"/>
                        <ref name="avt"/>
                    </choice>
                </attribute>
            </optional>
            <optional>
                <attribute name="type">
                    <choice>
                        <data type="string"/>
                    </choice>
                </attribute>
            </optional>
            <choice>
                <attribute name="value">
                    <data type="string"/>
                </attribute>
                <attribute name="ref">
                    <data type="string"/>
                </attribute>
            </choice>
        </element>
    </define>

    <define name="image">
        <element name="image">
            <optional>
                <attribute name="page">
                    <choice>
                        <data type="positiveInteger"/>
                        <ref name="avt"/>
                    </choice>
                </attribute>
            </optional>
            <attribute name="left">
                <choice>
                    <data type="decimal"/>
                    <ref name="avt"/>
                </choice>
            </attribute>
            <attribute name="top">
                <choice>
                    <data type="decimal"/>
                    <ref name="avt"/>
                </choice>
            </attribute>
            <optional>
                <attribute name="scale-percent">
                    <data type="float"/>
                </attribute>
            </optional>
            <optional>
                <attribute name="dpi">
                    <data type="integer"/>
                </attribute>
            </optional>
            <attribute name="href">
                <data type="anyURI"/>
            </attribute>
        </element>
    </define>

    <define name="group">
        <element name="group">
            <optional>
                <attribute name="page">
                    <data type="positiveInteger"/>
                </attribute>
            </optional>
            <optional>
                <attribute name="ref"/>
            </optional>
            <optional>
                <attribute name="offset-x">
                    <choice>
                        <data type="float"/>
                        <ref name="avt"/>
                    </choice>
                </attribute>
            </optional>
            <optional>
                <attribute name="offset-y">
                    <choice>
                        <data type="float"/>
                        <ref name="avt"/>
                    </choice>
                </attribute>
            </optional>
            <ref name="font-attributes"/>
            <ref name="components"/>
        </element>
    </define>

    <define name="repeat">
        <element name="repeat">
            <optional>
                <attribute name="page">
                    <data type="positiveInteger"/>
                </attribute>
            </optional>
            <attribute name="nodeset"/>
            <optional>
                <attribute name="offset-x">
                    <choice>
                        <data type="float"/>
                        <ref name="avt"/>
                    </choice>
                </attribute>
            </optional>
            <optional>
                <attribute name="offset-y">
                    <choice>
                        <data type="float"/>
                        <ref name="avt"/>
                    </choice>
                </attribute>
            </optional>
            <ref name="components"/>
        </element>
    </define>

    <define name="avt">
        <data type="string">
            <param name="pattern">.*\{.*</param>
        </data>
    </define>

    <define name="components">
        <zeroOrMore>
            <choice>
                <ref name="field"/>
                <ref name="group"/>
                <ref name="repeat"/>
                <ref name="barcode"/>
                <ref name="image"/>
            </choice>
        </zeroOrMore>
    </define>

    <define name="font-attributes">
        <optional>
            <attribute name="font-family">
                <choice>
                    <data type="string"/>
                    <ref name="avt"/>
                </choice>
            </attribute>
        </optional>
        <optional>
            <attribute name="font-size">
                <choice>
                    <data type="decimal"/>
                    <ref name="avt"/>
                </choice>
            </attribute>
        </optional>
        <optional>
            <attribute>
                <choice>
                    <name>font-pitch</name>
                    <name>spacing</name><!-- deprecated -->
                </choice>
                <choice>
                    <data type="decimal"/>
                    <ref name="avt"/>
                </choice>
            </attribute>
        </optional>
    </define>

</grammar>
