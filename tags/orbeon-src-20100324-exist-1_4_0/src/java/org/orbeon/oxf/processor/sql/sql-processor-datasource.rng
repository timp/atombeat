<element name="datasource" xmlns="http://relaxng.org/ns/structure/1.0"
    datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
    <interleave>
        <optional>
            <!-- Driver class name, for example "org.hsqldb.jdbcDriver" -->
            <element name="driver-class-name">
                <data type="string"/>
            </element>
        </optional>
        <optional>
            <!-- Driver URI, for example "jdbc:hsqldb:file:/opt/db/testdb" -->
            <element name="uri">
                <data type="anyURI"/>
            </element>
        </optional>
        <!-- Username -->
        <optional>
            <element name="username">
                <data type="string"/>
            </element>
        </optional>
        <!-- Password -->
        <optional>
            <element name="password">
                <data type="string"/>
            </element>
        </optional>
    </interleave>
</element>
