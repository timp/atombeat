<grammar xmlns="http://relaxng.org/ns/structure/1.0"
    datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">

    <start>
        <element name="config">
            <interleave>
                <element name="base-directory">
                    <data type="string">
                        <param name="pattern">\s*\S.*\s*</param>
                    </data>
                </element>
                <zeroOrMore>
                    <element name="include">
                        <data type="string">
                            <param name="pattern">\s*\S.*\s*</param>
                        </data>
                    </element>
                </zeroOrMore>
                <zeroOrMore>
                    <element name="exclude">
                        <data type="string">
                            <param name="pattern">\s*\S.*\s*</param>
                        </data>
                    </element>
                </zeroOrMore>
                <optional>
                    <element name="case-sensitive">
                        <choice>
                            <value>true</value>
                            <value>false</value>
                        </choice>
                    </element>
                </optional>
                <optional>
                    <element name="default-excludes">
                        <choice>
                            <value>true</value>
                            <value>false</value>
                        </choice>
                    </element>
                </optional>
                <optional>
                    <element name="image-metadata">
                        <interleave>
                            <optional>
                                <element name="basic-info">
                                    <choice>
                                        <value>true</value>
                                        <value>false</value>
                                    </choice>
                                </element>
                            </optional>
                            <optional>
                                <element name="exif-info">
                                    <choice>
                                        <value>true</value>
                                        <value>false</value>
                                    </choice>
                                </element>
                            </optional>
                            <optional>
                                <element name="iptc-info">
                                    <choice>
                                        <value>true</value>
                                        <value>false</value>
                                    </choice>
                                </element>
                            </optional>
                        </interleave>
                    </element>
                </optional>
            </interleave>
        </element>
    </start>

</grammar>
