<element name="attributes"
    datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
    xmlns="http://relaxng.org/ns/structure/1.0">

    <zeroOrMore>
        <element name="attribute">
            <attribute name="name"/>
            <choice>
                <group>
                    <choice>
                        <attribute name="type">
                            <value>string</value>
                        </attribute>
                        <attribute name="as">
                            <data type="QName">
                                <param name="pattern">.+:string</param>
                            </data>
                        </attribute>
                    </choice>
                    <attribute name="value">
                        <data type="string"/>
                    </attribute>
                </group>

                <group>
                    <choice>
                        <attribute name="type">
                            <value>boolean</value>
                        </attribute>
                        <attribute name="as">
                            <data type="QName">
                                <param name="pattern">.+:boolean</param>
                            </data>
                        </attribute>
                    </choice>
                    <attribute name="value">
                        <data type="boolean"/>
                    </attribute>
                </group>

                <group>
                    <choice>
                        <attribute name="type">
                            <value>integer</value>
                        </attribute>
                        <attribute name="as">
                            <data type="QName">
                                <param name="pattern">.+:integer</param>
                            </data>
                        </attribute>
                    </choice>
                    <attribute name="value">
                        <data type="integer"/>
                    </attribute>
                </group>

                <group>
                    <choice>
                        <attribute name="type">
                            <value>date</value>
                        </attribute>
                        <attribute name="as">
                            <data type="QName">
                                <param name="pattern">.+:date</param>
                            </data>
                        </attribute>
                    </choice>
                    <attribute name="value">
                        <data type="date"/>
                    </attribute>
                </group>

                <group>
                    <choice>
                        <attribute name="type">
                            <value>dateTime</value>
                        </attribute>
                        <attribute name="as">
                            <data type="QName">
                                <param name="pattern">.+:dateTime</param>
                            </data>
                        </attribute>
                    </choice>
                    <attribute name="value">
                        <data type="dateTime"/>
                    </attribute>
                </group>

                <group>
                    <choice>
                        <attribute name="type">
                            <value>QName</value>
                        </attribute>
                        <attribute name="as">
                            <data type="QName">
                                <param name="pattern">.+:QName</param>
                            </data>
                        </attribute>
                    </choice>
                    <attribute name="value">
                        <data type="QName"/>
                    </attribute>
                </group>

                <group>
                    <choice>
                        <attribute name="type">
                            <value>anyURI</value>
                        </attribute>
                        <attribute name="as">
                            <data type="QName">
                                <param name="pattern">.+:anyURI</param>
                            </data>
                        </attribute>
                    </choice>
                    <attribute name="value">
                        <data type="anyURI"/>
                    </attribute>
                </group>

            </choice>
        </element>
    </zeroOrMore>
</element>
