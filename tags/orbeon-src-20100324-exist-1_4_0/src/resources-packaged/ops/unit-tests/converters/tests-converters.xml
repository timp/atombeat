        <output name="data">
            <document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="xs:string" content-type="text/plain; charset=utf-8">
                This is just plain text. It will be output without the text and em elements.
            </document>
        </output>
    </test>
