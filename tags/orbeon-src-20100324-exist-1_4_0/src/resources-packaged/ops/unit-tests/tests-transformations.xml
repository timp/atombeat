    <!-- This currently (Saxon 8.1.1) produces only a warning. It would be cleaning to get rid of it... -->
    <test description="XSLT: Ambiguous template" name="oxf:xslt"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
        <input name="data">
            <root>
                <test>
                    <xhtml:html>
                        <xhtml:form xhtml:id="test">
                            <a>
                                <xhtml:br/>
                            </a>
                        </xhtml:form>
                    </xhtml:html>
                </test>
            </root>
        </input>
        <input name="config">
            <xsl:stylesheet version="2.0" xmlns:xhtml="http://www.w3.org/1999/xhtml">

                <xsl:template match="xhtml:*">
                    <xsl:element name="{local-name()}">
                        <xsl:apply-templates select="@*|node()"/>
                    </xsl:element>
                </xsl:template>

                <xsl:template match="@xhtml:*">
                    <xsl:attribute name="{local-name()}">
                        <xsl:value-of select="."/>
                    </xsl:attribute>
                </xsl:template>

                <xsl:template match="@*|node()" priority="-2">
                    <xsl:copy>
                        <xsl:apply-templates select="@*|node()"/>
                    </xsl:copy>
                </xsl:template>
            </xsl:stylesheet>
        </input>
        <output name="data">
            <root>
                <test>
                    <html>
                        <form id="test">
                            <a>
                                <br/>
                            </a>
                        </form>
                    </html>
                </test>
            </root>
        </output>
    </test>

    <test description="Prevent doc('input:data') from being read in XSLT and XUpdate" name="oxf:pipeline">
        <input name="config">
            <p:config xmlns:p="http://www.orbeon.com/oxf/pipeline" xmlns:oxf="http://www.orbeon.com/oxf/processors">
                <p:param type="output" name="result"/>

                <p:processor name="oxf:xupdate">
                    <p:input name="data">
                        <a/>
                    </p:input>
                    <p:input name="config">
                        <xu:modifications>
                            <xu:copy-of select="doc('input:data')"/>
                        </xu:modifications>
                    </p:input>
                    <p:output name="data" id="xupdate-result"/>
                </p:processor>

                <p:processor name="oxf:exception-catcher">
                    <p:input name="data" href="#xupdate-result"/>
                    <p:output name="data" id="xupdate-exception"/>
                </p:processor>

                <p:processor name="oxf:xslt">
                    <p:input name="data">
                        <a/>
                    </p:input>
                    <p:input name="config">
                        <xsl:stylesheet version="2.0">
                            <xsl:template match="/">
                                <gaga>
                                    <xsl:copy-of select="doc('input:data')"/>
                                </gaga>
                            </xsl:template>
                        </xsl:stylesheet>
                    </p:input>
                    <p:output name="data" id="xslt-result"/>
                </p:processor>

                <p:processor name="oxf:exception-catcher">
                    <p:input name="data" href="#xslt-result"/>
                    <p:output name="data" id="xslt-exception"/>
                </p:processor>

                <p:for-each href="aggregate('root', #xupdate-exception, #xslt-exception)" select="root/*" root="root" ref="result">
                    <p:processor name="oxf:identity">
                        <!-- NOTE: We used to test the complete message, but Saxon now outputs a different message so we just test on "input" -->
                        <p:input name="data" href="aggregate('result', current()#xpointer(contains(/exceptions/exception[1]/message, 'input')))"/>
                        <p:output name="data" ref="result"/>
                    </p:processor>
                </p:for-each>

            </p:config>
        </input>
        <output name="result">
            <root>
                <result>true</result>
                <result>true</result>
            </root>
        </output>
    </test>

</group>
